$(function() {
  alert('Note saved successfully!');
  var form = $('#' + '<%= @form_id %>');
  var title = form.find('input[type!="hidden"]');
  var button = form.find('button');

  title.attr('readonly', 'readonly');
  title.css('background', 'none');
  form.find('textarea').attr('readonly', 'readonly');
  button.html('Edit');
});
