$(function() {
  alert('Note saved successfully!');
  // Change form to update format
  var form = $('#<%= @form_id %>');
  form.append('<input type="hidden" name="_method" value="patch">');
  form.attr('action', '/notes/' + <%= @note.id %>);
  form.removeClass('new_note');
  MAPKEEP.toggleForm('<%= @form_id %>');
});
